        bot.send_message(message.chat.id, 'чувство прекрасного в тебе вечно да?')
    if 'чудесно' in message.text.lower():
        bot.send_message(message.chat.id, 'ну раз чудесно то я рад за тебя.')
    elif 'прелестно' in message.text.lower():
        bot.send_message(message.chat.id, 'издеваешься')
    if 'за что' in message.text.lower():
        bot.send_message(message.chat.id, 'за то что я может быть тебя ранил')
    elif 'извини' in message.text.lower():
        bot.send_message(message.chat.id, 'не извиняйся. никогда не перед кем')

bot.polling()
